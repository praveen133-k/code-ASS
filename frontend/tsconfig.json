{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"moduleResolution": "node",
		"types": ["node"]
	},
	"include": ["src/**/*", "tests/**/*"],
	"exclude": ["node_modules/*", ".svelte-kit/*"]
} 